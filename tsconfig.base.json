{
    "compilerOptions": {
        "target": "ES2022",
        "lib": ["ES2022"],
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "strict": true,
        "declaration": true,
        "sourceMap": true,
        "outDir": "dist",
        "resolveJsonModule": true,
        "types": ["node"],
        "baseUrl": ".",
        "paths": {
            "@/*": ["./*"]
        }
    }
}
